# Optimized Steam Discord Bot Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Discord Bot Token (Required)
# Get this from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Steam API Key (Required)
# Get this from https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your_steam_api_key_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Telegram Bot Token (Optional - for Telegram bot support)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Number of retry attempts for failed requests
RETRY_ATTEMPTS=3

# Delay between retries in seconds
RETRY_DELAY=1.0

# =============================================================================
# CACHE SETTINGS
# =============================================================================

# Maximum number of cached items
CACHE_MAX_SIZE=1000

# Default cache TTL in seconds (5 minutes)
CACHE_DEFAULT_TTL=300

# Profile cache TTL in seconds (5 minutes)
CACHE_PROFILE_TTL=300

# Game data cache TTL in seconds (1 hour)
CACHE_GAME_TTL=3600

# Player count cache TTL in seconds (2 minutes)
CACHE_PLAYER_COUNT_TTL=120

# =============================================================================
# RATE LIMITING
# =============================================================================

# Maximum requests per user per time window
RATE_LIMIT_MAX_REQUESTS=15

# Rate limit time window in seconds
RATE_LIMIT_WINDOW=60

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Comma-separated list of allowed Discord guild IDs (leave empty to allow all)
# Example: ALLOWED_GUILDS=123456789,987654321
ALLOWED_GUILDS=

# Comma-separated list of admin user IDs
# Example: ADMIN_USER_IDS=123456789,987654321
ADMIN_USER_IDS=

# Enable debug mode (true/false)
DEBUG_MODE=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable caching (true/false)
ENABLE_CACHING=true

# Enable rate limiting (true/false)
ENABLE_RATE_LIMITING=true

# Enable analytics and metrics (true/false)
ENABLE_ANALYTICS=true

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable JSON formatted logs (true/false)
ENABLE_JSON_LOGGING=true

# =============================================================================
# DATABASE SETTINGS (Optional - for advanced features)
# =============================================================================

# Database host
# DB_HOST=localhost

# Database port
# DB_PORT=5432

# Database name
# DB_NAME=steam_bot

# Database user
# DB_USER=steam_bot

# Database password
# DB_PASSWORD=your_database_password_here

# =============================================================================
# REDIS SETTINGS (Optional - for distributed caching)
# =============================================================================

# Redis host
# REDIS_HOST=localhost

# Redis port
# REDIS_PORT=6379

# Redis password
# REDIS_PASSWORD=

# Redis database number
# REDIS_DB=0

# =============================================================================
# MONITORING SETTINGS (Optional)
# =============================================================================

# Prometheus metrics port
# METRICS_PORT=9090

# Health check endpoint
# HEALTH_CHECK_ENDPOINT=/health

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Session secret for internal use (auto-generated if not set)
# SESSION_SECRET=your_session_secret_here

# Custom user agent for API requests
# USER_AGENT=SteamBot/2.0.0 (Discord Bot)

# Enable SSL verification (true/false)
# SSL_VERIFY=true

# Proxy settings (if needed)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080